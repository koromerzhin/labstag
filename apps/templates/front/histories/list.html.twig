{% set showaside = false %}
{% set mainclass = "main-home" %}
{% import "macro.html.twig" as macro_site %}
{% extends 'skeleton/home.html.twig' %}
{% block section %}
    {% for history in pagination %}
        <div class="history_data">
			<h2 class="history_name">
				<a href="{{ path('history', 'show', {'slug': history.slug}) }}">
					{{ history.name }}
				</a>
			</h2>
			<div class="history_date">
				{{ 'history.infodateuser'|trans(
                    {
                        '%date%': history.published|format_datetime(pattern=formatdatetime.public),
                        '%user%': macro_site.user(history.refuser, path('history', 'user', {'username': history.refuser.username}))
                    }
                )|raw }}
				{% set state = guard_route('admin_history_edit') %}
				{% if state == true %}
					<a href="{{ path('admin_history_edit', {'id': history.id}) }}" target="_blank">Modifier</a>
				{% endif %}
			</div>
			<div class="history_content">
				{{ history.summary|raw }}
			</div>
        </div>
    {% endfor %}
{% endblock %}