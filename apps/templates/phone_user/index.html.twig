{% extends 'base.html.twig' %}

{% block title %}PhoneUser index{% endblock %}

{% block body %}
    <h1>PhoneUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Country</th>
                <th>Type</th>
                <th>Principal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for phone_user in phone_users %}
            <tr>
                <td>{{ phone_user.id }}</td>
                <td>{{ phone_user.numero }}</td>
                <td>{{ phone_user.country }}</td>
                <td>{{ phone_user.type }}</td>
                <td>{{ phone_user.principal }}</td>
                <td>
                    <a href="{{ path('phone_user_show', {'id': phone_user.id}) }}">show</a>
                    <a href="{{ path('phone_user_edit', {'id': phone_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('phone_user_new') }}">Create new</a>
{% endblock %}
