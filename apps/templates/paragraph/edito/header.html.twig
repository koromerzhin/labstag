{% set img = attachment(edito.fond) %}
{% if img is not null and img.name is not null %}
    <section id="{{ paragraph_id(paragraph) }}" class="{{ paragraph_class(paragraph) }}">
        <picture class="header_edito_img">
            <img loading="lazy" alt="{{ edito.title|e('html_attr') }}" src="{{ asset(img.name) | imagefilter('my_thumb') }}" />
        </picture>
    </section>
{% endif %}
