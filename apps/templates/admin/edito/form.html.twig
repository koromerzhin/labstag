{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.published) }}
    {{ form_row(form.content) }}
    {{ form_row(form.metaDescription) }}
    {{ form_row(form.metaKeywords) }}
    {% if entity.id is not null %}
        {{ macro_admin.form_img(
            entity,
            entity.fond,
            "edito.fond"|trans({}, 'admin.messages'),
            path('api_attachment_editofond', {'entity': entity.id})
        ) }}
    {% endif %}
    {{ form_row(form.file) }}
    {{ form_row(form.refuser) }}
    {{ form_end(form) }}
{% endblock %}
