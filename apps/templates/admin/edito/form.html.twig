{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.published) }}
    {{ form_row(form.content) }}
    {% if entity.id is not null %}
        {{ macro_admin.form_img(
            entity,
            entity.fond,
            "edito.fond"|trans({}, 'admin.messages'),
            path('api_attachment_editofond', {'entity': entity.id})
        ) }}
    {% endif %}
    {{ form_row(form.file) }}
    {{ form_row(form.paragraph) }}
    {{ form_row(form.refuser) }}
    {{ form_row(form.metas) }}
    {{ form_end(form) }}
{% endblock %}
{% block modal %}
    {{ parent() }}
    {% include "admin/paragraph/modal.html.twig" with {'paragraphurl': 'admin_edito_paragraph_index' } %}
{% endblock %}
