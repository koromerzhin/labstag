{% extends 'admin/edito/layout.html.twig' %}
{% block content %}
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Enable</th>
                <th>User</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for edito in pagination %}
            <tr>
                <td>{{ edito.title }}</td>
                <td>{{ edito.enable ? 'Yes' : 'No' }}</td>
                <td>{{ edito.refuser }}</td>
                <td>
                    <a href="{{ path('edito_show', {'id': edito.id}) }}">show</a>
                    <a href="{{ path('edito_edit', {'id': edito.id}) }}">edit</a>
                    <a href="#">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('edito_new') }}">Create new</a>
{% endblock %}
