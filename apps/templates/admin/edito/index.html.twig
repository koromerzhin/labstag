{% extends 'admin/edito/layout.html.twig' %}
{% block body %}
    <table
  data-locale="fr-FR"
  data-toggle="table"
  data-search="true"
  data-show-columns="true">
        <thead>
            <tr>
                <th>Title</th>
                <th>Enable</th>
                <th>User</th>
                <th class="text-center"><i class="fas fa-cog" title="Actions"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for edito in pagination %}
            <tr>
                <td>{{ edito.title }}</td>
                <td>{{ edito.enable ? 'Yes' : 'No' }}</td>
                <td>{{ edito.refuser }}</td>
                <td>
                    <a href="{{ path('admin_edito_show', {'id': edito.id}) }}">show</a>
                    <a href="{{ path('admin_edito_edit', {'id': edito.id}) }}">edit</a>
                    <a href="{{ path('admin_edito_delete', {'id': edito.id}) }}" data-token="{{ csrf_token('delete' ~ edito.id) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_edito_new') }}">Create new</a>
{% endblock %}
