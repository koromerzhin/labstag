{% extends 'admin/phone_user/layout.html.twig' %}

{% block content %}
    <table class="table">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Country</th>
                <th>Type</th>
                <th>Principal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for phone_user in pagination %}
            <tr>
                <td>{{ phone_user.numero }}</td>
                <td>{{ phone_user.country|country_name('fr') }}</td>
                <td>{{ phone_user.type }}</td>
                <td>{{ phone_user.principal ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('phone_user_show', {'id': phone_user.id}) }}">show</a>
                    <a href="{{ path('phone_user_edit', {'id': phone_user.id}) }}">edit</a>
                    <a href="#">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('phone_user_new') }}">Create new</a>
{% endblock %}
