{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin/geocode/layout.html.twig' %}
{% block body %}
    <table
        is="table-datatable"
        data-action="{{ "Actions"|trans|e('html_attr') }}"
        data-multiple
        data-multipleall="{{ "Tout sÃ©lectionner"|trans|e('html_attr') }}"
        data-multipleelement="{{ "Selection"|trans|e('html_attr') }}"
        data-empty="{{ "No records found"|trans|e('html_attr') }}"
        data-count={{ pagination|length }}
    >
        <thead>
            <tr>
                <th>{{ "CountryCode"|trans }}</th>
                <th>{{ "PostalCode"|trans }}</th>
                <th>{{ "PlaceName"|trans }}</th>
                <th>{{ "StateName"|trans }}</th>
                <th>{{ "StateCode"|trans }}</th>
                <th>{{ "ProvinceName"|trans }}</th>
                <th>{{ "ProvinceCode"|trans }}</th>
                <th>{{ "CommunityName"|trans }}</th>
                <th>{{ "CommunityCode"|trans }}</th>
                <th>{{ "Latitude"|trans }}</th>
                <th>{{ "Longitude"|trans }}</th>
                <th>{{ "Accuracy"|trans }}</th>
                <th>{{ "actions"|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr data-id="{{ entity.id }}">
                <td>
                    <span class="flag-icon flag-icon-{{ entity.countryCode|lower }}"></span>
                    {{ entity.countryCode|country_name('fr') }}
                </td>
                <td>{{ entity.postalCode }}</td>
                <td>{{ entity.placeName }}</td>
                <td>{{ entity.stateName }}</td>
                <td>{{ entity.stateCode }}</td>
                <td>{{ entity.provinceName }}</td>
                <td>{{ entity.provinceCode }}</td>
                <td>{{ entity.communityName }}</td>
                <td>{{ entity.communityCode }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>{{ entity.accuracy }}</td>
                <td>
                    {{ macro_admin.actions(entity, actions) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
