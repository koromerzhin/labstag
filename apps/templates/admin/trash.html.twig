{% extends 'admin.html.twig' %}
{% block body %}
    <table is="table-datatable">
        <thead>
            <tr>
                <th>Entit√©</th>
                <th>Count</th>
                <th><i title="Actions"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for data in trash %}
            <tr>
                <td>
                    {{ data.entity }}
                </td>
                <td>
                    {{ data.total }}
                </td>
                <td>
                    <btn-trash
                        href="{{ data.properties.url }}"
                        title="Aller sur cette corbeille"
                    ></btn-trash>
                    <btn-destroy
                        redirect="{{ path(app.request.attributes.get('_route')) }}"
                        href="{{ path('api_action_empty', {'entity': data.name}) }}"
                    ></btn-destroy>
                </td>
            </tr>
        {% else %}
            no records found
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
