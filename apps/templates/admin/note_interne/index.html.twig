{% extends 'admin/note_interne/layout.html.twig' %}
{% block body %}
    <table
  data-locale="fr-FR"
  data-toggle="table"
  data-search="true"
  data-show-columns="true">
        <thead>
            <tr>
                <th>Title</th>
                <th>Enable</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>User</th>
                <th class="text-center"><i class="fas fa-cog" title="Actions"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for note_interne in pagination %}
            <tr>
                <td>{{ note_interne.title }}</td>
                <td>{{ note_interne.enable ? 'Yes' : 'No' }}</td>
                <td>{{ note_interne.dateDebut ? note_interne.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ note_interne.dateFin ? note_interne.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ note_interne.refuser }}</td>
                <td>
                    <a href="{{ path('admin_noteinterne_show', {'id': note_interne.id}) }}">show</a>
                    <a href="{{ path('admin_noteinterne_edit', {'id': note_interne.id}) }}">edit</a>
                    <a href="{{ path('admin_noteinterne_delete', {'id': note_interne.id}) }}" data-token="{{ csrf_token('delete' ~ note_interne.id) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_noteinterne_new') }}">Create new</a>
{% endblock %}
