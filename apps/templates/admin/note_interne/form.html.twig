{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin/note_interne/layout.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.date_debut) }}
    {{ form_row(form.date_fin) }}
    {% if entity.id is not null %}
        {{ macro_admin.form_img(
            entity,
            entity.fond,
            "Fond",
            path('api_attachment_noteinternefond', {'entity': entity.id})
        ) }}
    {% endif %}
    {{ form_row(form.file) }}
    {{ form_end(form) }}
{% endblock %}
