{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.date_start) }}
    {{ form_row(form.date_end) }}
    {% if entity.id is not null %}
        {{ macro_admin.form_img(
            entity,
            entity.fond,
            "memo.fond"|trans({}, 'admin.messages'),
            path('api_attachment_memofond', {'entity': entity.id})
        ) }}
    {% endif %}
    {{ form_row(form.file) }}
    {{ form_row(form.content) }}
    {{ form_row(form.paragraph) }}
    {{ form_end(form) }}
{% endblock %}
{% block modal %}
    {{ parent() }}
    {% include "admin/paragraph/modal.html.twig" %}
{% endblock %}

