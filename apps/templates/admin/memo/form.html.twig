{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.date_start) }}
    {{ form_row(form.date_end) }}
    {% if entity.id is not null %}
        {{ macro_admin.form_img(
            entity,
            entity.fond,
            "memo.fond"|trans({}, 'admin.messages'),
            path('api_attachment_memofond', {'entity': entity.id})
        ) }}
    {% endif %}
    {{ form_row(form.file) }}
    {{ form_row(form.content) }}
    {% include "admin/paragraph/index.html.twig" with {'addurl': path('admin_memo_paragraph_add', {'id': entity.id}), 'urledit': 'admin_memo_paragraph_show', 'urldelete': 'admin_memo_paragraph_delete', 'paragraphs': entity.paragraphs} %}
    {{ form_end(form) }}
{% endblock %}
{% block modal %}
    {{ parent() }}
    {% include "admin/paragraph/modal.html.twig" with {'paragraphurl': 'admin_memo_paragraph_index' } %}
{% endblock %}

