{%- extends 'admin/lien_user/layout.html.twig' -%}
{%- block body -%}
    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td><a href="{{ entity.adresse }}" target="_blank">{{ entity.adresse }}</a></td>
            </tr>
            <tr>
                <th>User</th>
                <td>
                    {%- if entity.refuser.deletedAt != '' -%}
                        {%- set url = 'admin_user_preview' -%}
                    {%- else -%}
                        {%- set url = 'admin_user_show' -%}
                    {%- endif -%}
                    {%- set state = guard_route(url) -%}
                    {%- if state == true -%}
                        <a href="{{ path(url, {'id': entity.refuser.id}) }}">{{ entity.refuser }}</a>
                    {%- else -%}
                        {{ entity.refuser }}
                    {%- endif -%}
                </td>
            </tr>
        </tbody>
    </table>
{%- endblock -%}
