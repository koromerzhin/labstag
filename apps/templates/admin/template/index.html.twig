{% extends 'admin/template/layout.html.twig' %}
{% block content %}
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in pagination %}
            <tr>
                <td>{{ template.name }}</td>
                <td>{{ template.code }}</td>
                <td>
                    <a href="{{ path('template_show', {'id': template.id}) }}">show</a>
                    <a href="{{ path('template_edit', {'id': template.id}) }}">edit</a>
                    <a href="#">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('template_new') }}">Create new</a>
{% endblock %}
