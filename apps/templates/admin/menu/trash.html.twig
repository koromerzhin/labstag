{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin/menu/layout.html.twig' %}
{% block body %}
    <table
        is="table-datatable"
        data-action="{{ 'table.admin.action'|trans({}, 'admin.messages')|e('html_attr') }}"
        data-multiple
        data-multipleall="{{ 'table.admin.multipleall'|trans({}, 'admin.messages')|e('html_attr') }}"
        data-multipleelement="{{ 'table.admin.mutipleelement'|trans({}, 'admin.messages')|e('html_attr') }}"
        data-empty="{{ 'table.admin.empty'|trans({}, 'admin.messages')|e('html_attr') }}"
        data-count={{ pagination|length }}
    >
        <thead>
            <tr>
                <th>{{ 'menu.libelle'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'menu.icon'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'menu.position'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'menu.data'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'menu.separateur'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'menu.clef'|trans({}, 'admin.messages') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr data-id="{{ entity.id }}">
                <td>{{ entity.libelle }}</td>
                <td>{{ entity.icon }}</td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.data ? entity.data|json_encode : '' }}</td>
                <td>{{ entity.separateur ? 'state.yes'|trans({}, 'admin.messages') : 'state.no'|trans({}, 'admin.messages') }}</td>
                <td>{{ entity.clef }}</td>
                <td>
                    {{ macro_admin.actions(entity, actions) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}