{% extends 'admin/menu/layout.html.twig' %}
{% block body %}
    <table
  data-locale="fr-FR"
  data-toggle="table"
  data-search="true"
  data-show-columns="true">
        <tbody>
            <tr>
                <th>Libelle</th>
                <td>{{ menu.libelle }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ menu.icon }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ menu.position }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ menu.data ? menu.data|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Separateur</th>
                <td>{{ menu.separateur ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Clef</th>
                <td>{{ menu.clef }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_menu_index') }}">back to list</a>

    <a href="{{ path('admin_menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('admin/menu/_delete_form.html.twig') }}
{% endblock %}
