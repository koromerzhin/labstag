<table is="guard-workflow" data-url="{{ path('api_guard_workflow', {'group' : group.id}) }}">
    <thead>
        <tr>
            <th rowspan=2>
                Entit√©
            </th>
            <th rowspan=2>
                Transition
            </th>
            <th rowspan=2>
                Actions
            </th>
            <th>
                {{ group.name }}
            </th>
        </tr>
        <tr>
            <th>
                {% if 'superadmin' != group.code %}
                    <guard-workflowgroup
                        data-state=0
                        data-url="{{ path('api_guard_workflowgroup', {'group' : group.id}) }}"
                        data-token="{{ csrf_token('guard') }}"
                    ></guard-workflowgroup>
                {% else %}
                    ----
                {% endif %}
            </th>
        </tr>
    </thead>
    <tbody>
    {% for workflow in workflows %}
        <tr>
            <td>
                {{ workflow.entity }}
            </td>
            <td>
                {{ workflow.transition }}
            </td>
            <td>
                 <guard-workflowgroups
                    data-state=0
                    data-entity="{{ workflow.entity|e }}"
                    data-transition="{{ workflow.transition|e }}"
                    data-url="{{ path('api_guard_workflowgroups', {'group': group.id, 'entity' : workflow.entity, 'transition': workflow.transition}) }}"
                    data-token="{{ csrf_token('guard') }}"
                ></guard-workflowgroups>
            </td>
            <td>
                {% if 'superadmin' != group.code %}
                    <guard-workflowsetgroup
                        title="{{ group.name|e }}"
                        data-state=0
                        data-groupe="{{ group.code|e }}"
                        data-entity="{{ workflow.entity|e }}"
                        data-transition="{{ workflow.transition|e }}"
                        data-url="{{ path('api_guard_workflowgroups', {'group' : group.id, 'entity' : workflow.entity, 'transition': workflow.transition}) }}"
                        data-token="{{ csrf_token('guard') }}"
                    ></guard-workflowsetgroup>
                {% else %}
                    ---
                {% endif %}
            </td>
        </tr>
    {% else %}
            <tr>
                <td colspan="4" class="text-center">no records found</td>
            </tr>
    {% endfor %}
    </tbody>
</table>