{% set state1 = guard_route('api_guard_workflow') %}
{% set state2 = guard_route('api_guard_workflowuser') %}
{% set state3 = guard_route('api_guard_workflowsetuser') %}
{% set state = state1 and state2 and state3 %}
{% if state1 == false %}
    {{ 'guard.lost'|trans({}, 'admin.messages') }}
{% else %}
    <table is="guard-workflow" data-url="{{ path('api_guard_workflow', {'user' : user.id}) }}" data-refresh=0>
        <thead>
            <tr>
                <th rowspan=2>
                    {{ 'guard.entite'|trans({}, 'admin.messages') }}
                </th>
                <th rowspan=2>
                    {{ 'guard.transition'|trans({}, 'admin.messages') }}
                </th>
                <th rowspan=2>
                    {{ 'guard.groupe'|trans({"%name%": user.refgroupe.name}, 'admin.messages') }}
                </th>
                <th>
                    {{ user.username }}
                </th>
            </tr>
            <tr>
                <th>
                    <guard-changeworkflow
                        data-state=0
                        data-token="{{ csrf_token('guard') }}"
                        data-url="{{ path('api_guard_workflowuser', {'user' : user.id}) }}"
                    ></guard-changeworkflow>
                </th>
            </tr>
        </thead>
        <tbody>
        {% for workflow in workflows %}
            <tr>
                <td>
                    {{ workflow.entity }}
                </td>
                <td>
                    {{ workflow.transition }}
                </td>
                <td>
                    <guard-refgroupworkflow
                        data-state=0
                        data-group="{{ user.refgroupe.code|e('html_attr') }}"
                        data-entity="{{ workflow.entity|e('html_attr') }}"
                        data-transition="{{ workflow.transition|e('html_attr') }}"
                    ></guard-refgroupworkflow>
                </td>
                <td>
                    <guard-setworkflow
                        data-state=0
                        data-entity="{{ workflow.entity|e('html_attr') }}"
                        data-transition="{{ workflow.transition|e('html_attr') }}"
                        data-token="{{ csrf_token('guard') }}"
                        data-url="{{ path('api_guard_workflowsetuser', {'user' : user.id, 'workflow' : workflow.id}) }}"
                    ></guard-setworkflow>
                </td>
            </tr>
        {% else %}
                <tr>
                    <td colspan="4" class="text-center">{{ 'norecord'|trans({}, 'admin.messages') }}</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
