<table is="guard-workflow">
    <thead>
        <tr>
            <th rowspan=2>
                Entit√©
            </th>
            <th rowspan=2>
                Transition
            </th>
            <th rowspan=2>
                Groupe {{ user.groupe.name }}
            </th>
            <th>
                {{ user.username }}
            </th>
        </tr>
        <tr>
            <th>
                <guard-workflowuser
                    data-state=0
                    data-token="{{ csrf_token('guard') }}"
                ></guard-workflowuser>
            </th>
        </tr>
    </thead>
    <tbody>
    {% for workflow in workflows %}
        <tr>
            <td>
                {{ workflow.entity }}
            </td>
            <td>
                {{ workflow.transition }}
            </td>
            <td>
                <guard-refgroup
                    data-entity="{{ workflow.entity|e }}"
                    data-transition="{{ workflow.transition|e }}"
                ></guard-refgroup>
            </td>
            <td>
                <guard-workflowsetgroup
                    data-state=0
                    data-entity="{{ workflow.entity|e }}"
                    data-transition="{{ workflow.transition|e }}"
                    data-token="{{ csrf_token('guard') }}"
                ></guard-workflowsetgroup>
            </td>
        </tr>
    {% else %}
            <tr>
                <td colspan="4" class="text-center">no records found</td>
            </tr>
    {% endfor %}
    </tbody>
</table>