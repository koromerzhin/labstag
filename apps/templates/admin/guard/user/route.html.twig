<table is="guard-route" data-url="{{ path('api_guard_route', {'user' : user.id}) }}" data-refresh=0>
    <thead>
        <tr>
            <th rowspan=2>
                Route
            </th>
            <th rowspan=2>
                Groupe {{ user.groupe.name }}
            </th>
            <th>
                {{ user.username }}
            </th>
        </tr>
        <tr>
            <th>
                <guard-set
                    data-state=0
                    data-url="{{ path('api_guard_routeuser', {'user' : user.id}) }}"
                    data-token="{{ csrf_token('guard') }}"
                ></guard-set>
            </th>
        </tr>
    </thead>
    <tbody>
    {% for route in routes %}
        <tr>
            <td>
                {{ route.name }}
            </td>
            <td>
                <guard-refgroup
                    data-state=0
                    data-group="{{ user.groupe.code }}"
                    data-route="{{ route.name|e }}"
                ></guard-refgroup>
            </td>
            <td>
                <guard-set
                    data-state=0
                    data-route="{{ route.name|e }}"
                    data-url="{{ path('api_guard_routesetuser', {'user' : user.id, 'route': route.id}) }}"
                    data-token="{{ csrf_token('guard') }}"
                ></guard-set>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="{{ groups|length+2 }}" class="text-center">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>