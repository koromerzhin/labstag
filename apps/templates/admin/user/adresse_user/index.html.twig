{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin/user/adresse_user/layout.html.twig' %}
{% block body %}
    <table
        is="table-datatable"
        data-action="{{ 'table.admin.action'|trans({}, 'admin.messages')|e('html_attr') }}"
        data-multiple
        data-multipleall="{{ 'table.admin.multipleall'|trans({}, 'admin.messages')|e('html_attr') }}"
        data-multipleelement="{{ 'table.admin.mutipleelement'|trans({}, 'admin.messages')|e('html_attr') }}"
        data-empty="{{ 'table.admin.empty'|trans({}, 'admin.messages')|e('html_attr') }}"
        data-count={{ pagination|length }}
    >
        <thead>
            <tr>
                <th>{{ 'user.address.rue'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.address.country'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.address.zipcode'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.address.ville'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.address.gps'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.address.type'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.address.pmr'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.address.user'|trans({}, 'admin.messages') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr data-id="{{ entity.id }}">
                <td>{{ entity.rue }}</td>
                <td>
                    <span class="flag-icon flag-icon-{{ entity.country|lower }}"></span>
                    {{ entity.country|country_name('fr') }}
                </td>
                <td>{{ entity.zipcode }}</td>
                <td>{{ entity.ville }}</td>
                <td>{{ entity.gps }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.pmr ? 'state.yes'|trans({}, 'admin.messages') : 'state.no'|trans({}, 'admin.messages') }}</td>
                <td>
                    {{ entity.refuser.username }}
                </td>
                <td>
                    {{ macro_admin.actions(entity, actions) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
