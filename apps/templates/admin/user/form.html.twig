{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin/user/layout.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.plainPassword) }}
    {{ form_row(form.refgroupe) }}
    {% if form.email is defined %}
    {{ form_row(form.email) }}
    {% endif %}
	<ul class="nav nav-tabs" id="myTab" role="tablist">
		<li class="nav-item" role="presentation">
			<a class="nav-link active" id="emails-tab" data-bs-toggle="tab" href="#emails" role="tab" aria-controls="emails" aria-selected="true">{{ 'form.user.emails'|trans({}, 'admin.messages') }}</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="phones-tab" data-bs-toggle="tab" href="#phones" role="tab" aria-controls="phones" aria-selected="false">{{ 'form.user.phones'|trans({}, 'admin.messages') }}</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="address-tab" data-bs-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="false">{{ 'form.user.address'|trans({}, 'admin.messages') }}</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="links-tab" data-bs-toggle="tab" href="#links" role="tab" aria-controls="links" aria-selected="false">{{ 'form.user.links'|trans({}, 'admin.messages') }}</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="avatar-tab" data-bs-toggle="tab" href="#avatar" role="tab" aria-controls="avatar" aria-selected="false">{{ 'form.user.avatar'|trans({}, 'admin.messages') }}</a>
		</li>
	</ul>
	<div class="tab-content" id="myTabContent">
		<div class="tab-pane fade show active" id="emails" role="tabpanel" aria-labelledby="emails-tab">
			{{ form_row(form.emailUsers) }}
		</div>
		<div class="tab-pane fade" id="phones" role="tabpanel" aria-labelledby="phones-tab">
			{{ form_row(form.phoneUsers) }}
		</div>
		<div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
			{{ form_row(form.adresseUsers) }}
		</div>
		<div class="tab-pane fade" id="links" role="tabpanel" aria-labelledby="links-tab">
			{{ form_row(form.lienUsers) }}
		</div>
		<div class="tab-pane fade" id="avatar" role="tabpanel" aria-labelledby="avatar-tab">
            {% if entity.id is not null %}
                {{ macro_admin.form_img(
                    entity,
                    entity.avatar,
                    "user.avatar"|trans({}, 'admin.messages'),
                    path('api_attachment_useravatar', {'entity': entity.id})
                ) }}
            {% endif %}
            {{ form_row(form.file) }}
		</div>
	</div>
    {{ form_end(form) }}
{% endblock %}
