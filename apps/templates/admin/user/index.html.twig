{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin/user/layout.html.twig' %}
{% block body %}
    <table
        is="table-datatable"
        data-action="{{ 'table.admin.action'|trans|e('html_attr') }}"
        data-multiple
        data-multipleall="{{ 'table.admin.multipleall'|trans|e('html_attr') }}"
        data-multipleelement="{{ 'table.admin.mutipleelement'|trans|e('html_attr') }}"
        data-empty="{{ 'table.admin.empty'|trans|e('html_attr') }}"
        data-count={{ pagination|length }}
    >
        <thead>
            <tr>
                <th>{{ 'user.username'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.groupe'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.email'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.adresses'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.liens'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.emails'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.telephones'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'workflow.state'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.workflow'|trans({}, 'admin.messages') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr data-id="{{ entity.id }}">
                <td>{{ entity.username }}</td>
                <td>{{ entity.refgroupe }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.adresseUsers|length }}</td>
                <td>{{ entity.lienUsers|length }}</td>
                <td>{{ entity.emailUsers|length }}</td>
                <td>{{ entity.phoneUsers|length }}</td>
                <td>
                    {% for state in workflow_marked_places(entity) %}
                        {{ state }}
                    {% endfor %}
                </td>
                <td>
                    {{ macro_admin.workflow(entity, actions) }}
                </td>
                <td>
                    {{ macro_admin.actions(entity, actions) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
