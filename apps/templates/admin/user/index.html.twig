{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin/user/layout.html.twig' %}
{% block body %}
    <table is="table-datatable">
        <thead>
            <tr>
                <th>Username</th>
                <th>Groupe</th>
                <th>Email</th>
                <th>Enable</th>
                <th>Adresses</th>
                <th>Liens</th>
                <th>Emails</th>
                <th>Téléphones</th>
                <th class="text-center" data-events="operateEvents"><i class="BtnAdminTableAction" title="Actions"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.username }}</td>
                <td>{{ entity.groupe }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.enable ? 'Yes' : 'No' }}</td>
                <td>{{ entity.adresseUsers|length }}</td>
                <td>{{ entity.lienUsers|length }}</td>
                <td>{{ entity.emailUsers|length }}</td>
                <td>{{ entity.phoneUsers|length }}</td>
                <td>
                    {{ macro_admin.actions(entity, actions) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
