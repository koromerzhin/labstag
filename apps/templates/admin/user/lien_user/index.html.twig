{% extends 'admin/user/lien_user/layout.html.twig' %}
{% block body %}
    {% embed "admin/table.html.twig" %}
        {% import "admin/macro.html.twig" as macro_admin %}
        {% block thead %}
            <tr>
                <th>{{ 'user.link.name'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.link.adresse'|trans({}, 'admin.messages') }}</th>
                <th>{{ 'user.link.user'|trans({}, 'admin.messages') }}</th>
                <th></th>
            </tr>
        {% endblock %}
        {% block tbody %}
        {% for entity in pagination %}
            <tr data-id="{{ entity.id }}">
                <td>{{ entity.name }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.refuser }}</td>
                <td>
                    {{ macro_admin.actions(entity, actions) }}
                </td>
            </tr>
        {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
