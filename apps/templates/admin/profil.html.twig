{% extends 'admin.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
    {{ form(form) }}
    {% if entity.oauthconnectusers|length != 0 or oauthActivated|length != 0 %}
        <div class="row">
    {% endif %}
    {% if entity.oauthconnectusers|length != 0 %}
        <div class="col-auto">
            <fieldset class="shadow p-3 mb-5 bg-white">
                <legend>Dissocier :</legend>
                <div class="row">
                    {% for oauth in entity.oauthconnectusers %}
                        <div class="col-md-4 itemConnect">
                            <a href="{{ path('connect_lost', {'oauthCode': oauth.name}) }}" title="{{ oauth.name|e }}">
                                <i class="fab fa-{{ oauth.name }}"></i>
                                {{ oauth.name }}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </fieldset>
        </div>
    {% endif %}
    {% if oauthActivated|length != 0 %}
        <div class="col-auto">
            <fieldset class="shadow p-3 mb-5 bg-white">
                <legend>Se connecter avec :</legend>
                <div class="row">
                {% for oauth in oauthActivated %}
                    <div class="col-md-4 itemConnect">
                        <a href="{{ path('connect_start', {'oauthCode': oauth.type}) }}" title="{{ oauth.type|e }}">
                            <i class="fab fa-{{ oauth.type }}"></i>
                            {{ oauth.type }}
                        </a>
                    </div>
                {% endfor %}
                </div>
            </fieldset>
        </div>
    {% endif %}
    {% if entity.oauthconnectusers|length != 0 or oauthActivated|length != 0 %}
        </div>
    {% endif %}
{% endblock %}
