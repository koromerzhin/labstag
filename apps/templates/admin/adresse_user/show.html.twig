{% extends 'admin/adresse_user/layout.html.twig' %}
{% block body %}
    <table
  data-locale="fr-FR"
  data-toggle="table"
  data-show-columns="true">
        <tbody>
            <tr>
                <th>Rue</th>
                <td>{{ entity.rue }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>
                    <span class="flag-icon flag-icon-{{ entity.country|lower }}"></span>
                    {{ entity.country|country_name('fr') }}
                </td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ entity.zipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ entity.ville }}</td>
            </tr>
            <tr>
                <th>Gps</th>
                <td><span class="GpsIcon"></span>{{ entity.gps }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Pmr</th>
                <td>{{ entity.pmr ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td><a href="{{ path('admin_user_show', {'id': entity.refuser.id}) }}">{{ entity.refuser }}</a></td>
            </tr>
        </tbody>
    </table>
{% endblock %}
