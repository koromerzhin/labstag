{% extends 'admin.html.twig' %}
{% block body %}
    {% embed "admin/table.html.twig" %}
        {% import "admin/macro.html.twig" as macro_admin %}
        {% block thead %}
            {% set theads = [
                {
                    'field': 'a.name',
                    'name': 'page.name'|trans({}, 'admin.messages')
                },
                {
                    'field': 'a.slug',
                    'name': 'page.slug'|trans({}, 'admin.messages')
                },
                {
                    'field': 'a.frontslug',
                    'name': 'page.frontslug'|trans({}, 'admin.messages')
                }
            ] %}
            {{ macro_admin.thead(theads, pagination, true) }}
        {% endblock %}
        {% block tbody %}
            {% for entity in pagination %}
                <tr data-id="{{ entity.id }}">
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.slug }}</td>
                    <td>{{ entity.frontslug }}</td>
                    <td>
                        {{ macro_admin.actions(entity, actions) }}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
