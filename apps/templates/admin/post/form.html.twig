{% import "admin/macro.html.twig" as macro_admin %}
{% extends 'admin.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.published) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.content) }}
    {% include "admin/paragraph/index.html.twig" with {'addurl': path('admin_post_paragraph_add', {'id': entity.id}), 'urledit': 'admin_post_paragraph_show', 'urldelete': 'admin_post_paragraph_delete', 'paragraphs': entity.paragraphs} %}
    {% if entity.id is not null %}
        {{ macro_admin.form_img(
            entity,
            entity.img,
            "post.image"|trans({}, 'admin.messages'),
            path('api_attachment_postimg', {'entity': entity.id})
        ) }}
    {% endif %}
    {{ form_row(form.file) }}
    {{ form_row(form.refcategory) }}
    {{ form_row(form.libelles) }}
    {{ form_row(form.refuser) }}
    {{ form_row(form.remark) }}
    {{ form_row(form.metas) }}
    {{ form_end(form) }}
{% endblock %}
{% block modal %}
    {{ parent() }}
    {% include "admin/paragraph/modal.html.twig" with {'paragraphurl': 'admin_post_paragraph_index' } %}
{% endblock %}

