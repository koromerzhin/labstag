    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>Principal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for email_user in email_users %}
            <tr>
                <td>{{ email_user.id }}</td>
                <td>{{ email_user.adresse }}</td>
                <td>{{ email_user.principal ? 'Yes' : 'No' }}</td>
                <td>
