<div id="destroy-modal" tabindex="-1" aria-labelledby="destroy-modalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="destroy-modalLabel">
                    {{ 'modal.destroy.title'|trans }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ 'modal.destroy.message'|trans }}
            </div>
            <div class="modal-footer">
                <confirm-close title="{{ 'modal.button.cancel'|trans|e('html_attr') }}" />
                <confirm-destroy title="{{ 'modal.button.delete'|trans|e('html_attr') }}" />
            </div>
        </div>
    </div>
</div>