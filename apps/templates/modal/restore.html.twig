<div id="restore-modal" tabindex="-1" aria-labelledby="restore-modalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="restore-modalLabel">
                    {{ "Restaurer ?"|trans }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ "Êtes-vous sûr de vouloir restaurer cette donnée ?"|trans }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-cancel" data-bs-dismiss="modal">
                    <i></i>
                    <span>{{ "Annuler"|trans }}</span>
                </button>
                <confirm-restore>
                    <i></i>
                    <span>{{ "Restaurer"|trans }}</span>
                </confirm-restore>
            </div>
        </div>
    </div>
</div>