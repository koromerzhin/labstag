<div id="restories-modal" tabindex="-1" aria-labelledby="restories-modalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="restories-modalLabel">
                    {{ 'modal.restories.title'|trans }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ 'modal.restories.message'|trans }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-cancel" data-bs-dismiss="modal">
                    <i></i>
                    <span>{{ 'modal.button.cancel'|trans }}</span>
                </button>
                <confirm-restories>
                    <i></i>
                    <span>{{ 'modal.button.restore'|trans }}</span>
                </confirm-restories>
            </div>
        </div>
    </div>
</div>