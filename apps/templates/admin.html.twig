{% extends 'base.html.twig' %}
{% import "macro.html.twig" as macro_site %}
{% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block content %}
    <header>
        <!-- Fixed navbar -->
        <div class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                {{ knp_menu_render('admin_menu', {'style': 'navbar', 'currentClass': 'active'}) }}
                {{ knp_menu_render('admin_profilmenu', {'style': 'navbar', 'currentClass': 'active'}) }}
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            {% if headerTitle is defined %}
            <div class="col">
                <h1>{{ headerTitle|trans }}</h1>
            </div>
            {% endif %}
            <div class="col text-right">
                {{ include('admin/btn.html.twig') }}
            </div>
        </div>
        {{ wo_render_breadcrumbs() }}
        {{ macro_site.flashbag(app) }}
        {% block body %}
        {% endblock %}
        <footer>
            {% if pagination is defined %}
                {{ knp_pagination_render(pagination) }}
            {% endif %}
        </footer>
    </div>
{% endblock %}